<% if flash[:errors].length > 0 %>
<%byebug%>
<% flash[:errors].full_messages do |mess| %>
<p><%= mess %></p>
<% end %>


<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>
